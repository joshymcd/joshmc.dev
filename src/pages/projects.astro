---
import Layout from "../layouts/Layout.astro";
import FolderKanban from "@lucide/astro/icons/folder-kanban";
import HardHat from "@lucide/astro/icons/hard-hat";
import PageTitle from "../components/PageTitle.astro";
---

<Layout>
  <div class="flex flex-col flex-1 items-center gap-y-8">
    <PageTitle title="Projects" icon={FolderKanban} />
    <div
      class="flex-1 flex flex-col items-center justify-center text-text-muted w-full"
    >
      <HardHat size={48} class="mb-4" />
      <p class="text-xl">Under Construction</p>
    </div>
  </div>
</Layout>
