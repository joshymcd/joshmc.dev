---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
---

<Layout title="Personal Projects">
  <main class="flex h-full flex-col justify-evenly gap-4 lg:m-4">
    <section class="">
      <h2 class="text-lg font-semibold"></h2>
    </section>
    <ul class="flex flex-1 flex-col gap-2">
      
      <li>
        <Card index={0} title="This Site"  >
          <p
            class="mt-1 max-w-2xl text-center text-sm text-gray-900 lg:text-right"
          >
            JoshMc.dev<br /> Built with <a href="#">Astro</a> & <a href="#"
              >TailwindCSS</a
            >. Hosted on <a href="#">Vercel</a>.
          </p>

          <p slot="bottomLeft" class="text-sm font-medium text-gray-500">
            Status: <span class="text-green-600">Active</span>
          </p>
          <a
          slot="bottomRight"
        href="https://github.com/joshymcd/joshmc.dev"
        class="font-medium text-indigo-600 hover:text-indigo-500"
        >Github</a
      >
        </Card>
      </li>

      
      <li>
        <Card index={0} title="Coffea"  >
          <p
            class="mt-1 max-w-2xl text-center text-sm text-gray-900 lg:text-right"
          >
            Code Name: Coffea<br /> Coffee info app...
          </p>

          <p slot="bottomLeft" class="text-sm font-medium text-gray-500">
            Status: <span class="text-orange-600">Alpha</span>
          </p>
          <a
          slot="bottomRight"
        href="https://github.com/joshymcd/coffea"
        class="font-medium text-indigo-600 hover:text-indigo-500"
        >Link</a
      >
        </Card>
      </li>

      <li>
        <Card index={0} title="Asmari"  >
          <p
            class="mt-1 max-w-2xl text-center text-sm text-gray-900 lg:text-right"
          >
            Code Name: Asmari<br /> Order management and tracking app.
          </p>

          <p slot="bottomLeft" class="text-sm font-medium text-gray-500">
            Status: <span class="text-orange-600">Alpha</span>
          </p>
          <a
          slot="bottomRight"
        href="https://asmari.app"
        class="font-medium text-indigo-600 hover:text-indigo-500"
        >Link</a
      >
        </Card>
      </li>

    </ul>
  </main>
</Layout>
