---
// New component for Timeline Item
export interface Props {
  title: string;
  time: string;
  description: string;
}

const { title, time, description } = Astro.props;
---

<li class="mb-10 ms-4">
  <div
    class="absolute w-3 h-3 bg-gray-300 rounded-full mt-1.5 -start-[6.5px] border border-white dark:border-gray-900 dark:bg-gray-700"
  >
  </div>
  <time
    class="mb-1 text-sm font-normal leading-none text-gray-500 dark:text-gray-400"
    >{time}</time
  >
  <h3 class="text-lg font-semibold text-gray-900 dark:text-white">{title}</h3>
  <p class="mb-4 text-base font-normal text-gray-500 dark:text-gray-400">
    {description}
  </p>
</li>
