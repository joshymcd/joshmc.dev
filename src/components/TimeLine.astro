---
import TimeLineItem from '../components/TimeLineItem.astro'
interface LineItem {
    title: string;
    time: string;
    description: string;
}

const lineItems : LineItem[] = [
  {
    title: "Solutions Architect",
    description : "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec interdum odio eget ullamcorper viverra. Nam eu mi sed purus venenatis.",
    time: "July 2022"
  }
]


---   
			<div class="relative col-span-12 px-4 space-y-6 sm:col-span-9">
				<div class="col-span-12 space-y-12 relative px-4 sm:col-span-8 sm:space-y-8 sm:before:absolute sm:before:top-2 sm:before:bottom-0 sm:before:w-0.5 sm:before:-left-3 before:dark:bg-gray-700">
					{
            lineItems.map((v, i, a) =>(
              <TimeLineItem {...v} />
            ))
          }
				</div>
			</div> 