---

export interface Props {
    title: string;
    time: string;
    description: string;
}

const { title, time, description } = Astro.props;  
---   
<div class="flex flex-col relative before:absolute before:top-2 before:w-4 before:h-4 before:rounded-full before:left-[-35px] before:z-[1] before:dark:bg-violet-400">
    <h3 class="text-xl font-semibold tracki">{title}</h3>
    <time class="text-xs tracki uppercase ">{time}</time>
    <p class="mt-3">{description}</p>
</div>