---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html
  lang="en"
  class="bg-[conic-gradient(at_bottom_left,_var(--tw-gradient-stops))] from-gray-800 via-zinc-500 to-emerald-600"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-dvh w-dvw flex flex-col md:py-4 p-0">
    <header
      class="w-full bg-red-500/30 md:container mx-auto p-4 flex flex-row justify-between md:rounded-t-md"
    >
      <menu>Title / Name (non  root page)</menu>
      <menu class="flex flex-row gap-2">
        <li><a href="/about">about</a></li>
        <li>/</li>
        <li><a href="/projects">projects</a></li>
        <li>/</li>
        <li><a href="/resume">resume</a></li>
        <li>/</li>
        <li><a href="/contact">contact</a></li>
      </menu>
    </header>
    <main
      class="flex-1 backdrop-blur-sm bg-white/30 backdrop-brightness-150 w-full md:container mx-auto p-4"
    > 
      <slot />
    </main>
    <footer
      class="w-full bg-red-500/30 md:container mx-auto p-4 flex flex-row justify-between md:rounded-b-md"
    >
      <menu>socials go here</menu>
    </footer>
  </body>
</html>
